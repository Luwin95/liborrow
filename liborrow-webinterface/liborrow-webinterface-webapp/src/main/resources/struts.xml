<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="home" namespace="/" extends="struts-default" >

        <default-action-ref name="login" />
        
        <action name="login" class="com.liborrow.webinterface.webapp.actions.LoginAction">
        	<result name="input">/WEB-INF/jsp/login.jsp</result>
        	<result name="success" type="redirect">/liborrow/index.action</result>
        </action>
        
    </package>
    
    <package name="logged" namespace="/liborrow" extends="struts-default">
    
    	<action name="index" class="com.liborrow.webinterface.webapp.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="com.liborrow.webinterface.webapp.helloWorldAction">
            <result name="input">/jsp/index.jsp</result>
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>
        
        <action name="book" class="com.liborrow.webinterface.webapp.actions.BookAction">
        	<result name="success">/WEB-INF/jsp/book.jsp</result>
        </action>
        
    </package>
</struts>
