<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- DÃ©claration des Managers -->
	<bean id="bookManager" class ="com.liborrow.webservice.business.impl.manager.BookManagerImpl"/>
	<bean id="itemManager" class ="com.liborrow.webservice.business.impl.manager.ItemManagerImpl"/>
	<bean id="magazineManager" class ="com.liborrow.webservice.business.impl.manager.MagazineManagerImpl"/>
	
	<!-- Manager Factory -->
	<bean id="managerFactory" class ="com.liborrow.webservice.business.impl.ManagerFactoryImpl">
		<property name="bookManager" ref="bookManager"/>
		<property name="itemManager" ref="itemManager"/>
		<property name="magazineManager" ref="magazineManager"/>
	</bean>
	
	<context:component-scan base-package="com.liborrow.webservice.business.impl.manager" />
</beans>
